<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <%- include('../partials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <%- include('../partials/_sidebar.ejs') %>
          <!-- partial -->
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="page-header">
                <h3 class="page-title">
                  <span class="page-title-icon bg-gradient-primary text-white me-2">
                    <i class="mdi mdi-bus"></i>
                  </span> Editar Onibus
                </h3>

              </div>
              <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <form class="forms-sample needs-validation" id="form" novalidate>
                      <div class="form-group">
                        <label for="placa">Placa do Onibus</label>
                        <input type="text" class="form-control" id="placa"
                          pattern="^[A-Z]{3}-[0-9]{4}$|[A-Z]{3}-[0-9][A-Z][0-9]{2}" maxlength="8"
                          placeholder="Digete o a Placa do Onibus" required>
                        <div class="valid-feedback">Tudo Certo</div>
                        <div class="invalid-feedback">Placa Invalida</div>
                      </div>
                      <button type="submit" class="btn btn-gradient-primary me-2">Confirmar</button>
                      <a class="btn btn-danger me-2" href="/admin/onibus">Cancelar</a>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
            <%- include('../partials/_footer.ejs') %>
              <!-- partial -->
          </div>
          <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
  </div>
