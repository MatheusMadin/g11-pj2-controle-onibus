<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('partials/_head.ejs') %>
    <title>Dashboard</title>
</head>

  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <%- include('partials/_navbar.ejs') %>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
          <!-- partial:partials/_sidebar.html -->
          <%- include('partials/_sidebar.ejs') %>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                  <div class="page-header">
                    <h3 class="page-title">
                      <span class="page-title-icon bg-gradient-primary text-white me-2">
                        <i class="mdi mdi-bus"></i>
                      </span> Tarifa
                    </h3>
    
                  </div>
                  <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body">
                        <h4>Valores Atuais</h4>
                        <ul>
                            <li id="lidinheiro">Valor no Dinheiro: R$5</li>
                            <li id="licartao">Valor no Cartao: R$4,50</li>
                        </ul>

                        <h4>Alterar Tarifa</h4>
                        <form class="forms-sample needs-validation" id="form" novalidate>
                          <div class="form-group">
                            <label for="dinheiro">Preço no Dinheiro</label>
                            <input type="text" class="form-control" id="dinheiro"placeholder="0,00" required>
                            <div class="valid-feedback">Tudo Certo</div>
                            <div class="invalid-feedback">Placa Invalida</div>
                          </div>
                          <div class="form-group">
                            <label for="cartao">Preço no Cartão</label>
                            <input type="text" class="form-control" id="cartao"placeholder="0,00" required>
                            <div class="valid-feedback">Tudo Certo</div>
                            <div class="invalid-feedback">Placa Invalida</div>
                          </div>
    
                          <button type="submit" class="btn btn-primary me-2">Confirmar</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              <!-- content-wrapper ends -->
              <!-- partial:partials/_footer.html -->
              <%- include('partials/_footer.ejs') %>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/admin/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="/admin/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/admin/assets/js/off-canvas.js"></script>
    <script src="/admin/assets/js/hoverable-collapse.js"></script>
    <script src="/admin/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/admin/assets/js/dashboard.js"></script>
    <script src="/admin/assets/js/todolist.js"></script>
    <!-- End custom js for this page -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/admin/js/tarifa/tarifa.js"></script>
    <script src="/admin/js/tarifa/formatarSaldo.js"></script>

  </body>

  </html>