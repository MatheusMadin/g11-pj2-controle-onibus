<!DOCTYPE html>
<html lang="en">

<head>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <%- include('partials/_head.ejs') %>
      <title>Purple Admin</title>
  </head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth">
        <div class="row flex-grow">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
              <div class="brand-logo justify-content-center">
                <img src="/admin/assets/images/Litoral Transporte.svg">
                <h3>Litoral Transportes</h3>
            </div>
              <h4>Registrar</h4>
              <form id="form" class="pt-3" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="nome">Nome Completo</label>
                  <input type="text" class="form-control form-control-lg" id="nome" name="nome"
                    placeholder="Digite seu Nome Completo">
                </div>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Digite seu Email">
                </div>
                <div class="form-group">
                  <label for="senha">Senha</label>
                  <input type="password" class="form-control form-control-lg" id="senha" name="senha" placeholder="Digite sua Senha">
                </div>
                <div class="form-group">
                  <label for="foto">Foto 3x4</label>
                  <input type="file" class="form-control form-control-lg" id="foto" name="foto">
                </div>
                <div class="mt-3">
                  <button type="submit" class="btn btn-primary me-2"> Registrar </button>
                </div>
                <div class="text-center mt-4 font-weight-light"> Já tem uma conta? <a href="/admin/login"
                    class="text-primary">Faça Login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="/admin/assets/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page -->
  <!-- End plugin js for this page -->
  <!-- inject:js -->
  <script src="/admin/assets/js/off-canvas.js"></script>
  <script src="/admin/assets/js/hoverable-collapse.js"></script>
  <script src="/admin/assets/js/misc.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/admin/js/login/cadastrar.js"></script>
  <!-- endinject -->
</body>

</html>